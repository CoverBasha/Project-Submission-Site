@using Project_Submission_Site.ViewModels;

@model UserHomeViewModel

<head>
	<title>@Model.Username - Home</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/styles.css">
	<link rel="stylesheet" href="~/css/Home.css">
</head>
<body>
	<div class="fixed-top bg-black mb-4">
		<div class="container">
			<header class="d-flex flex-wrap justify-content-center py-3 pt-4">
				<a asp-action="Home" class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none me-auto">
					<span class="fs-3 fw-semibold text-white">Project Submission Site</span>
				</a>

				<ul class="nav nav-pills me-auto">
					<li class="nav-item"><a asp-action="Home" class="nav-link text-black bg-white" aria-current="page">Home</a></li>
					<li class="nav-item"><a asp-action="Projects" asp-controller="Projects" class="nav-link text-white">Projects</a></li>
				</ul>

				<a asp-action="Empty" asp-controller="Profile" class="btn btn-light me-2 d-flex align-items-center" role="button"> Profile </a>
				<a asp-action="Logout" asp-controller="UserHome" class="btn btn-outline-light me-2 d-flex align-items-center" role="button"> Log out </a>

			</header>
		</div>
	</div>

	<section class="home-section container mt-5" id="home-section">
		<h2>Pending proposals</h2>

		<br />
		<div class="home-container pb-4">

			@foreach (var project in Model.Submitted)
			{
				<div class="proposal-card ">
					<h3 style="width: 50%;">@project.Name</h3>

					<a class="btn btn-success" asp-action="Approve" asp-route-id="@project.Id">Approve</a>
					<a class="btn btn-danger" asp-action="Decline" asp-route-id="@project.Id">Decline</a>
					<a class="btn btn-danger" asp-action="RequestMod" asp-route-id="@project.Id">Request Modification</a>
				</div>
				<br />
			}

		</div>
		<br />

	</section>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<script src="~/js/index.js"></script>
</body>
