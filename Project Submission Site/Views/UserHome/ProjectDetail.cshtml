@model Project

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@Model.Name details</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
		  rel="stylesheet"
		  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
		  crossorigin="anonymous" />
	<link rel="stylesheet" href="~/css/styles.css" />
	<link rel="stylesheet" href="~/css/projects.css">
	<link rel="stylesheet" href="~/css/details.css" />
</head>
<body>
	<div class="fixed-top bg-black mb-4">
		<div class="container">
			<header class="d-flex flex-wrap justify-content-center py-3 pt-4">
				<a asp-action="Home" class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none me-auto">
					<span class="fs-3 fw-semibold text-white">Project Submission Site</span>
				</a>

				<ul class="nav nav-pills me-auto">
					<li class="nav-item"><a asp-action="Home" class="nav-link text-white" aria-current="page">Home</a></li>
					<li class="nav-item"><a asp-action="Projects" class="nav-link text-black bg-white">Projects</a></li>
				</ul>

				<a href="profile.html" class="btn btn-light me-2 d-flex align-items-center" role="button"> Profile </a>
				<a href="../SignUp - black/index.html" class="btn btn-outline-light me-2 d-flex align-items-center" role="button">
					Log out
				</a>

			</header>
		</div>
	</div>
	<section class="project-section" id="project-section">
		<div class="p-4 d-flex flex-column align-items-center container">
			<div class="project-card project-details px-5">
				<h2 class="text-center fs-4 fw-semibold my-2">
					Project theme details
				</h2>
				<div class="d-flex flex-column mt-3">
					<h3 class="fs-5 mt-3">@Model.Name</h3>
					<p class="mt-3">
						@*
						<strong>
							Description:
						</strong>
						Explore how artificial intelligence is revolutionizing
						healthcare, from diagnosis to patient care.
					</p>*@
					<p class="mt-3"><strong>Deadline:</strong> @Model.Deadline.ToString("yyyy - M - d")</p>
					<p class="mt-3"><strong>Budget:</strong> $@Model.Budget</p>
					<p class="mt-3"><strong>duration:</strong> @Model.Duration Days</p>

					<hr>

					<form method="post" asp-action="SubmitProject" class="mt-2 d-flex flex-column" id="proposal-form" asp-route-id="@Model.Id">
						<h6 class="mb-2 text-secondary">Upload proposal</h6>
						<input type="file" name="file" id="proposal-file" accept=".pdf">
						<div class="button-row d-flex gap-3">
							<input type="submit" id="submit-proposal" value="Submitt proposal" class="btn btn-success mt-4" disabled>
							<button class="btn btn-danger mt-4" id="remove-proposal" hidden>Remove</button>
						</div>

					</form>

					<hr>

					<form action="" class="mt-2 d-flex flex-column ">
						<h6 class="mb-2 text-secondary">Upload Report</h6>
						<input type="file" id="report-file" accept=".pdf" disabled>
						<div class="button-row d-flex gap-3">
							<input type="submit" id="submit-report" value="Submit report" class="btn btn-warning mt-4" disabled>
							<button class="btn btn-danger mt-4" id="remove-report" hidden>Remove</button>
						</div>

					</form>

				</div>
			</div>
		</div>

	</section>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"></script>
	<script src="~/js/index.js"></script>
</body>