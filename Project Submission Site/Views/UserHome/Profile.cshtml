@model User
<head>
	<title>@Model.Username - Profile </title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/Home.css">
</head>
<body>
	<div class="fixed-top bg-dark mb-4">
		<div class="container">
			<header class="d-flex flex-wrap justify-content-center py-3 pt-4">
				<a href="/" class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none me-auto">
					<span class="fs-3 fw-semibold text-white">Project Submission Site</span>
				</a>

				<ul class="nav nav-pills me-auto">
					<li class="nav-item"><a href="#" class="nav-link active " aria-current="page">Home</a></li>
					<li class="nav-item"><a href="projects.html" class="nav-link text-white">Projects</a></li>
				</ul>

				<button type="button" class="btn btn-primary  me-2" asp-action="Profile">Profile</button>
				<a asp-action="Logout" class="btn btn-outline-primary me-2 d-flex align-items-center" role="button">
					Log out
				</a>

			</header>
		</div>
	</div>

	<section class="home-section" id="home-section">
		<div class="profile-background"></div>
		<div class="profile-user-card">
			<img src="images/user-black.png" alt="user icon" class="user-card-icon">
			<div class="user-card-text">
				<h3>
					Mobina Mirbagheri<span class="fs-5 ps-1">(User)</span>
				</h3>
				<h6>
					Your account is ready, you can now apply for projects.
				</h6>
			</div>
		</div>

		<div class="container profile-container">
			<form class="profile-form" action="">
				<h3>Edit Profile</h3>
				<!-- <div class="profile-form-content"> -->
				<h6>Username</h6>
				<input type="text" placeholder="Username" value="Mobina Mirbargheri" />
				<h6>Email</h6>
				<input type="email" placeholder="Email" value="morbina.mirbargheri@gmail.com" />
				<h6>Password</h6>
				<input type="password" placeholder="Password" value="testingtesting" readonly />
				<h6>New Password</h6>
				<div class="new-password">
					<input type="password" placeholder="New Password" />
					<input type="password" placeholder="Repeat password" />
				</div>

				<input type="submit" value="Update Profile" class="submit-button btn btn-dark bg-black" />
				<!-- </div> -->

			</form>
		</div>
		<div class="right">
		</div>


	</section>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<script src="~/js/index.js"></script>
</body>
