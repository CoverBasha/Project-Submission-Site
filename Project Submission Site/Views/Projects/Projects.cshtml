@model IEnumerable<Project>
<head>
	<title>Projects</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/styles.css">
	<link rel="stylesheet" href="~/css/projects.css">
</head>
<body>
	<div class="fixed-top bg-black mb-4">
		<div class="container">
			<header class="d-flex flex-wrap justify-content-center py-3 pt-4">
				<a class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none me-auto" asp-action="Home" asp-controller="UserHome">
					<span class="fs-3 fw-semibold text-white">Project Submission Site</span>
				</a>

				<ul class="nav nav-pills me-auto">
					<li class="nav-item"><a class="nav-link text-white" aria-current="page" asp-action="Home" asp-controller="UserHome">Home</a></li>
					<li class="nav-item"><a class="nav-link text-black bg-white" asp-action="Projects" asp-controller="Projects">Projects</a></li>
				</ul>

				<a asp-action="Empty" asp-controller="Profile" class="btn btn-light me-2 d-flex align-items-center" role="button"> Profile </a>
				<a class="btn btn-outline-light me-2 d-flex align-items-center" role="button" asp-controller="UserHome" asp-action="Logout">Log out</a>
			</header>
		</div>
	</div>

	<section class="project-section" id="project-section">
		<div class="container p-4 d-flex flex-column align-items-center gap-4 px-4">
			
			@foreach (var project in Model)
			{
				<div class="project-card" id="id-1">

					@*<a class="card-heading mb-1" asp-action="Details">
						@project.Name
					</a>*@

					@Html.ActionLink(@project.Name,"Details",new{id = project.Id},new{ @Class="card-heading mb-1"})
					<div class="card-deadline mb-2 ">
						@project.Deadline.ToString("MMMM dd, yyyy")
					</div>

					@*<div class="card-description mb-3">
						One of the most commonly-misunderstood operators is Modulo (%). In this tutorial, we'll unpack exactly what this little bugger does, and learn how it can help us solve practical problems.
						<a class="card-link" href="#">
						Continue reading
						<img src="images/arrow-right-solid.svg" alt="right arrow" class="arrow-right">
						</a>
						</div>
					*@

					<div class="card-duration-budget mb-1">
						<div class="card-budget"><span class="text-primary fw-semibold pe-2">Budget:</span>$@project.Budget</div>
						<div class="card-duration"><span class="text-primary fw-semibold px-2">Duration:</span>@project.Deadline days</div>
					</div>
				</div>
			}
		</div>
	</section>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<script src="~/js/index.js"></script>
</body>
