@model Project

<head>
	<title>Project info</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/styles.css">
	<link rel="stylesheet" href="~/css/ThemePage.css">
</head>

<body>
	<div class="fixed-top bg-success mb-4">
		<div class="container">
			<header class="d-flex flex-wrap justify-content-center py-3 pt-4">
				<a asp-action="Home" class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none me-auto">
					<span class="fs-3 fw-semibold text-white">Admin</span>
				</a>

				<ul class="nav nav-pills me-auto">
					<li class="nav-item"><a asp-action="Home" class="nav-link text-white" aria-current="page">Home</a></li>
					<li class="nav-item"><a asp-action="Project" class="nav-link text-black bg-white">Create Theme</a></li>
				</ul>

				<a href="profile.html" class="btn btn-light me-2 d-flex align-items-center" role="button"> Profile </a>
				<a href="../SignUp - black/index.html" class="btn btn-outline-light me-2 d-flex align-items-center" role="button">
					Log out
				</a>

			</header>
		</div>
	</div>

	<section class="theme-section container mt-5" id="theme-section">
		@if (@Model==null)
		{
			<h2 class="text-success fw-bold">Create Project Theme</h2>
		}
		else
		{
			<h2 class="text-success fw-bold">Edit Project Theme</h2>
		}

		@if (ViewBag.create)
		{
			@using (Html.BeginForm("Save", "AdminHome", FormMethod.Post, new { id = "theme-form" }))
			{
				<label for="title">Project Title:</label>
				<input type="text" id="title" asp-for=Name required>

				<label for="budget">Project Budget:</label>
				<input type="number" id="budget" asp-for=Budget required>

				<label for="duration">Project Duration (in days):</label>
				<input type="number" id="duration" asp-for=Duration required>

				<label for="deadline">Deadline:</label>
				<input type="date" id="deadline" asp-for=Deadline required>

				@Html.HiddenFor(p=>p.Id)
				<input type="submit" id="submit-theme" value="Create Theme" class="btn btn-success">
			}
		}


	</section>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<script src="~/js/index.js"></script>
</body>