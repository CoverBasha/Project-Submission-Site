@model Account

<head>
    <meta charset="UTF-8">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/Profile.css">
</head>

<body>
    <!-- <div class="shadeee"></div> -->
    <div class="fixed-top bg-black mb-4">
        <div class="container">
            <header class="d-flex flex-wrap justify-content-center py-3 pt-4">
                <a asp-action="Home" asp-controller="UserHome" class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none me-auto">
                    <span class="fs-3 fw-semibold text-white">Project Submission Site</span>
                </a>

                <ul class="nav nav-pills me-auto">
                    @if (Model is User)
                    {
                        <li class="nav-item"><a class="nav-link text-white" aria-current="page" asp-action="Home" asp-controller="UserHome">Home</a></li>
                    }
                    else if (Model is Referee)
                    {
                        <li class="nav-item"><a class="nav-link text-white" aria-current="page" asp-action="Home" asp-controller="RefereeHome">Home</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link text-white" aria-current="page" asp-action="Home" asp-controller="AdminHome">Home</a></li>
                    }
                    <li class="nav-item"><a asp-action="Projects" asp-controller="Projects" class="nav-link text-white">Projects</a></li>
                </ul>

                <a href="#" class="btn btn-light me-2 d-flex align-items-center" role="button"> Profile </a>
                <a class="btn btn-outline-light me-2 d-flex align-items-center" role="button" asp-controller="UserHome" asp-action="Logout">Log out</a>

            </header>
        </div>
    </div>

    <section class="profile-section" id="profile-section">
        <div class="profile-background">
        </div>
        <div class="container profile-container">
            <form class="profile-form" method="post" asp-action="Update">
                <h3>Edit Profile</h3>

                <h6>Username</h6>
                <input type="text" placeholder="Username" asp-for="Username" required />
                <h6>Email</h6>
                <input type="email" placeholder="Email" asp-for="Email" required />

                <h6>New Password</h6>
                <div class="new-password">
                    <input type="password" placeholder="New Password" name="NewPassword" />
                    <input type="password" placeholder="Repeat password" name="ConfirmPassword" />
                </div>

                <h6>Current Password</h6>
                <input type="password" placeholder="Confirm Password" name="Password" required />

                <span asp-validation-for="Username" class="error-validation"></span>
                <span asp-validation-for="Email" class="error-validation"></span>
                <span asp-validation-for="Password" class="error-validation"></span>

                <input type="submit" value="Save Changes" class="submit-button btn btn-dark bg-black" />

            </form>
        </div>
        <div class="right">
        </div>


    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/Profile.js"></script>
</body>