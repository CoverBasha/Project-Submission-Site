@model Account

<head>
    <meta charset="UTF-8">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Profile.css">
</head>

<body>
    <!-- <div class="shadeee"></div> -->
    <div class="fixed-top bg-black mb-4">
        <div class="container">
            <header class="d-flex flex-wrap justify-content-center py-3 pt-4">
                <a href="home.html" class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none me-auto">
                    <span class="fs-3 fw-semibold text-white">ReviewPoint</span>
                </a>

                <ul class="nav nav-pills me-auto">
                    <li class="nav-item"><a href="home.html" class="nav-link text-white" aria-current="page">Home</a></li>
                    <li class="nav-item"><a href="projects.html" class="nav-link text-white">Projects</a></li>
                </ul>

                <a href="#" class="btn btn-light me-2 d-flex align-items-center" role="button"> Profile </a>
                <a href="../SignUp - black/index.html" class="btn btn-outline-light me-2 d-flex align-items-center" role="button">
                    Log out
                </a>

            </header>
        </div>
    </div>

    <section class="profile-section" id="profile-section">
        <div class="profile-background">
        </div>
        <div class="container profile-container">
            <form class="profile-form" action="">
                <h3>Edit Profile</h3>

                <input type="hidden" placeholder="Id" asp-for="Id"/>

                <h6>Username</h6>
                <input type="text" placeholder="Username" asp-for="Username" />
                <h6>Email</h6>
                <input type="email" placeholder="Email" asp-for="Email" />

                <h6>New Password</h6>
                <div class="new-password">
                    <input type="password" placeholder="New Password" name="NewPassword" />
                    <input type="password" placeholder="Repeat password" name="ConfirmPassword" />
                </div>

                <h6>Password Confirmation</h6>
                <input type="password" placeholder="Confirm Password" name="Password" />

                <input type="submit" value="Save Changes" class="submit-button btn btn-dark bg-black" />

            </form>
        </div>
        <div class="right">
        </div>


    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/Profile.js"></script>
</body>