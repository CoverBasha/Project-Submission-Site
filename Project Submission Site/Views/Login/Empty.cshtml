@model LoginSignUpViewModel
<head>
	<title>Login</title>
	<link rel="stylesheet" href="~/css/Login.css" />
</head>

<body>
	<div class="box" id="my-container">
		<div class="shadow"></div>

		<div class="form-container sign-in">
			@using (Html.BeginForm("Login", "Login"))
			{
				<h2>Log In</h2>

				<input type="email" placeholder="Your Email" asp-for=Email />
				<input type="password" placeholder="Password" asp-for=Password />

				<input type="submit" value="Log In" class="submit-button" asp-action="Login" />
				<a href="" class="blue-link">Forgot password?</a>
				<h5><span>or</span></h5>

				<button class="google-button">
					<img src="~/images/google.svg" alt="google icon" class="icon" />
					<h4>Google</h4>
				</button>

				<h6>Don't have an account? <a href="#" id="register">Sign Up</a></h6>
			}
		</div>
		<div class="form-container sign-up">
			@using (Html.BeginForm("SignUp", "Login"))
			{
				<h2>Sign Up</h2>

				<h4>Register as</h4>
				<div class="radio-section">
					<div class="radio-container">
						<input type="radio"
						   asp-for=Type
						   id="personChoice1"
						   value="user"
						   checked />
						<label for="personChoice1"><span>User</span></label>
					</div>

					<div class="radio-container">
						<input type="radio"
						   asp-for=Type
						   id="personChoice2"
						   value="referee" />
						<label for="personChoice2"><span>Referee</span></label>
					</div>
				</div>

				<input type="email" placeholder="Your Email" asp-for=Email />
				<input type="text" placeholder="Username" asp-for=Username />
				<input type="password" placeholder="Password" asp-for=Password />
				<input type="password" placeholder="Repeat password" asp-for=Repeat />

				<input type="submit" value="Sign Up" class="submit-button" />

				<h5><span>or</span></h5>

				<button class="google-button">
					<img src="~/images/google.svg" alt="google icon" class="icon" />
					<h4>Google</h4>
				</button>

				<h6>Already have an account? <a href="#" id="login">Log in</a></h6>
			}
		</div>
		<div class="right">
		</div>
	</div>

	<script src="~/js/Login.js"></script>
</body>